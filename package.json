{
  "name": "srm",
  "private": true,
  "engines": {
    "node": ">=v20.3.1"
  },
  "packageManager": "pnpm@8.6.3",
  "scripts": {
    "dev": "dotenv -- turbo dev --parallel",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "check": "manypkg upgrade @trpc/server@10.34.0 @trpc/client@10.34.0",
    "db:studio": "dotenv -- turbo db:studio",
    "migrations:generate": "dotenv -- turbo migrations:generate",
    "migrations:apply": "dotenv -- turbo migrations:apply",
    "migrations:drop": "dotenv -- turbo migrations:drop",
    "migrations:seed": "dotenv -- turbo migrations:seed"
  },
  "dependencies": {
    "@manypkg/cli": "^0.21.0",
    "dotenv-cli": "^7.2.1",
    "turbo": "^1.10.12"
  }
}
