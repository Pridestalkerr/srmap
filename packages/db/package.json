{
  "name": "@srm/db",
  "version": "0.1.0",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "db:studio": "drizzle-kit studio",
    "migrations:generate": "drizzle-kit generate:pg",
    "migrations:apply": "node -r esbuild-register ./src/migrate.ts",
    "migrations:drop": "dotenv -e ../../.env -- drizzle-kit drop",
    "migrations:seed": "dotenv -e ../../.env -- node -r esbuild-register ./src/seed.ts"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@srm/eslint-config/base"
    ]
  },
  "devDependencies": {
    "@srm/env": "^0.0.0",
    "@srm/eslint-config": "^0.0.0",
    "@srm/tsconfig": "^0.0.0",
    "drizzle-kit": "^0.19.13",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "dotenv-cli": "^7.2.1",
    "drizzle-orm": "^0.28.5",
    "drizzle-zod": "^0.5.1",
    "esbuild-register": "^3.4.2",
    "postgres": "^3.3.5",
    "zod": "^3.21.4"
  }
}
